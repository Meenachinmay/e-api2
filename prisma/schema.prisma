generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

  relationMode = "prisma"
}

enum UserRole {
  ADMIN
  USER
  EVENT_ORGANIZER
}

// user model
model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String
  password String?
  role     UserRole @default(USER)
}

